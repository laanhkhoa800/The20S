@model IEnumerable<Code_CH.Models.TaiKhoanKhachHang>
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="changePass_father">
    <div class="changePass">
        @using (Html.BeginForm("ChangePass", "User"))
        {
        <div class="header-changePass">
            <H5>Đổi mật khẩu</H5>
        </div>

        <div class="line">
             <div class="line-or"></div>
         </div>

        <div class="changePass-field">
            <input type="password" name="pass" class="changePass-input" placeholder="Nhập mật khẩu cũ" required>
        </div>
        <div class="changePass-field ">
             <input type="password" name="newpass" class="changePass-input" placeholder="Nhập mật khẩu mới" required>
        </div>
        <div class="changePass-field changePass-input-pass">
            <input type="password" name="nhaplaipass" class="changePass-input" placeholder="Nhập lại mật khẩu" required>
        </div>
            <a href="@Url.Action("Index","User")" class="home_back"><i class="fas fa-angle-left"></i> Quay về trang chủ?</a>

             <button type="submit" class="changePass-submit">Đổi mật khẩu</button>

        <div class="mess-error-changePass">@ViewBag.Error_ChangePass <!--Mật khẩu không trùng khớp!--></div> <!-- bỏ viewbag vào đây -->}
            </div>
</div>


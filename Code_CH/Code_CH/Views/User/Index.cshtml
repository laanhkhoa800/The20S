@model IEnumerable<Code_CH.Models.DauSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<head>
    <title>Page_MainStore</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="./Store.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        keyframes mymove {
            0%

        {
            background-image: url(~/Content/Image/Logo_store.png);
        }

        25% {
            background-image: url(~/Content/Image/Logo_store.png);
        }

        50% {
            background-image: url(~/Content/Image/Logo_store.png);
        }

        100% {
            background-image: url(~/Content/Image/Logo_store.png);
        }
        }
    </style>
    <script>
        function OckHetHang(a) {
            document.getElementById("a") = div.replace(@ViewBag.hethang);
        }
    </script>

</head>
<body>
    
    <div class="pageCart">
        <div class="khoi-slide">
            <div class="cac-slide">
                <div class="slide active"><img src="@Url.Content(ViewBag.ani1)" /></div>
                <div class="slide"><img src="@Url.Content(ViewBag.ani2)"/></div>
                <div class="slide"><img src="@Url.Content(ViewBag.ani3)"></div>
                <div class="slide"><img src="@Url.Content(ViewBag.ani4)"></div>
                @*<div class="slide"><img src="~/Content/Image/br4.png"></div>*@
            </div>
            <div class="nut-slide">
                <span  id="btn-prev"><i class="fas fa-chevron-left"></i></span>
                <span id="btn-next"><i class="fas fa-chevron-right"></i></span>
                <ul>
                    <li class="active_nut"></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>
        </div>

        <div class="mediacreen">
            <div class="tt_MainStore">
                <h3 class="a">SẢN PHẨM NỔI BẬT</h3>
            </div>

            <div class="container" style="">
                <div class="wrapper wrapper_CTSP">
                    @foreach (var item in Model)
                    {

                        if (item.soluongSP > 0)
                        {
                            <div class="item item_CTSP">
                                <div class="wrarap_Sanpham">
                                    <a style="text-decoration:none;" href="@Url.Action("ChiTietSanPham", "User", new { id = item.maDSP })">
                                        <img class="img_sanphamWP" src="@Url.Content(item.hinhanhSP)">
                                    </a>
                                    <div class="tenSP_WP"><b>@Html.DisplayFor(model => item.tenSP)</b></div>
                                    <div class="price_sanphamWP"><b>@Html.DisplayFor(model => item.giaSP) đ</b></div>
                                </div>
                            </div>
                        }

                    }
                </div>
                <div class="tt_MainStore">
                    <h3 class="a">GỢI Ý DÀNH CHO BẠN</h3>
                </div>

                <div class="xSanpham">
                    @foreach (var item in Model)
                    {
                        if (item.soluongSP > 0)
                        {
                            <div class="item_sanpham">
                                <a href="@Url.Action("ChiTietSanPham", "User", new { id = item.maDSP })">
                                    <img class="img_sanpham" src="@Url.Content(item.hinhanhSP)" alt="hinhanh">
                                </a>
                                <div class="name_sanpham"><b>@Html.DisplayFor(model => item.tenSP)</b></div>
                                <div class="price_sanpham"><b>@Html.DisplayFor(model => item.giaSP) đ</b></div>
                            </div>
                        }
                        if(item.soluongSP == 0)
                        {
                            <div class="item_sanphamHetHang">
                                <a>
                                    <img class="img_sanphamHetHang" src="@Url.Content(item.hinhanhSP)" alt="hinhanh">
                                    <div id="label_hethang"> <label>Hết Hàng</label></div>
                                </a>
                                <div><del  class="name_sanpham">@Html.DisplayFor(model => item.tenSP)</del></div>
                                <div><del  class="price_sanpham">@Html.DisplayFor(model => item.giaSP) đ</del></div>
                            </div>
                        }
                    }
                </div>
            </div>

            <script type="text/javascript" src="~/Scripts/js/jquery-3.3.1.min.js"></script>
            <script type="text/javascript" src="~/Scripts/js/popper.min.js"></script>
            <script type="text/javascript" src="~/Scripts/js/script.js"></script>
            <script type="text/javascript" src="~/Scripts/js/Fancybox.js"></script>
            <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>




